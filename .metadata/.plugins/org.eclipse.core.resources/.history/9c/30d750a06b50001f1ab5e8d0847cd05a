package main;

public class Factorial {

	public static void main(String[] args) {
		
		// 재귀함수(factorial)
		
		int result = factorial(3);
			System.out.println(result);
	}
	
	// 팩토리얼: 5! => 5*4*3*2*1   3! => 3*2*1
	private static int factorial(int num) {
		
		if (num == 1) {
			return 1;
		} else {
			return num * factorial(num - 1);
		}
		
	}

}
