package main;

public class Quiz3 {

	public static void main(String[] args) {
		
		// 1부터 100까지 더하다가 합이 300이 넘어가면 중단하세요.
		// 마지막으로 더한 수와 합을 출력하세요.
		
		int sum = 0;
		
		for (int i = 1; i <= 100; i++) {
			sum = sum + i;
			
			} if (sum > 300) {
				
				break;
				
			}
		System.out.println("i: " + i + " , sum: " + sum);
	}

}
